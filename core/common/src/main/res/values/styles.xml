<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="AppTheme.BottomSheetDialog" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <style name="Dialog">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@color/dark_overlay</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <!--  text  -->

    <style name="Title1">
        <item name="fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Title2">
        <item name="fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Title3">
        <item name="fontFamily">@font/sf_pro_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Title4">
        <item name="fontFamily">@font/sf_pro_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text1">
        <item name="fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Button_text1">
        <item name="fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Button_text2">
        <item name="fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Tab_text">
        <item name="fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Number">
        <item name="fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">7sp</item>
    </style>


    <!--  buttons  -->

    <style name="Button_text2.Button_continue_disable">
        <item name="cornerRadius">8dp</item>
        <item name="backgroundTint">@color/dark_blue</item>
        <item name="android:clickable">false</item>
        <item name="android:textColor">@color/grey4</item>
        <item name="android:state_hovered">true</item>
    </style>

    <style name="Button_text2.Button_continue_enable">
        <item name="backgroundTint">@color/blue</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/shape_rounded_corners_8dp</item>
    </style>

    <style name="Button_text1.More_vacancies">
        <item name="backgroundTint">@color/blue</item>
        <item name="android:background">@drawable/shape_rounded_corners_8dp</item>
    </style>

    <style name="Button_text1.Respond">
        <item name="backgroundTint">@color/green</item>
        <item name="android:background">@drawable/shape_rounded_corners_8dp</item>
    </style>

    <style name="Button_text2.Button_green">
        <item name="backgroundTint">@color/green</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="Text1.Input_text">
        <!--        <item name="android:backgroundTint">@color/grey2</item>-->
        <item name="hintTextColor">@color/grey4</item>
    </style>

    <style name="Input_code">
        <item name="backgroundTint">@color/grey2</item>
        <item name="hintTextColor">@color/grey4</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:hint">*</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/shape_rounded_corners_8dp</item>
    </style>

    <style name="Button_filter">
        <item name="android:background">@drawable/shape_rounded_corners_8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="backgroundTint">@color/grey2</item>
    </style>


    <style name="Card">
        <item name="android:backgroundTint">@color/grey1</item>
        <item name="android:background">@drawable/shape_rounded_corners_8dp</item>
    </style>


    <style name="Text1.Vacancies">
        <item name="android:textColor">@color/green</item>
    </style>

</resources>