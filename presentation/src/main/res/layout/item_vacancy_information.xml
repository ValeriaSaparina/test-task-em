<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/back_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_back" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/watch_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_watch" />

        <ImageView
            android:id="@+id/share_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_share" />

        <ImageView
            android:id="@+id/is_favorite_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:scaleType="centerInside"
            android:src="@drawable/baseline_favorite_24" />


    </LinearLayout>

    <TextView
        android:id="@+id/title_tv"
        style="@style/Title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        tools:text="UI/UX designer" />

    <TextView
        android:id="@+id/salary_tv"
        style="@style/Text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        tools:text="Уровень дохода не указан" />

    <TextView
        android:id="@+id/experience_tv"
        style="@style/Text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        tools:text="Требуемый опыт: от 1 года до 3 лет" />

    <TextView
        android:id="@+id/schedules_tv"
        style="@style/Text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        tools:text="Полная занятость, полный день" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/responses_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_rounded_rectangle_dark_green"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:id="@+id/responses_number_tv"
                style="@style/Text1"
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="147 человек уже откликнулись" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="21dp"
                android:layout_weight="0"
                android:background="@drawable/shape_round_green"
                android:scaleType="centerInside"
                android:src="@drawable/ic_person_8" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/look_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@drawable/shape_rounded_rectangle_dark_green"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:id="@+id/look_number_tv"
                style="@style/Text1"
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                tools:text="2 человека сейчас смотрят" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="21dp"
                android:background="@drawable/shape_round_green"
                android:scaleType="centerInside"
                android:src="@drawable/ic_watch" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/shape_rounded_rectangle_grey_1"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp">

        <TextView
            android:id="@+id/company_name_tv"
            style="@style/Title3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            app:drawableEndCompat="@drawable/ic_checked"
            tools:text="Мобирикс" />

        <ImageView
            android:id="@+id/map_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/shape_rounded_corners_8dp"
            android:scaleType="centerInside"
            android:src="@drawable/img_map" />

        <TextView
            android:id="@+id/address_tv"
            style="@style/Text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            tools:text="Минск, улица Бирюзова, 4/5" />

    </LinearLayout>

    <TextView
        android:id="@+id/description_tv"
        style="@style/Text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" />

    <TextView
        style="@style/Title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/responsibilities_title" />

    <TextView
        android:id="@+id/responsibilities_tv"
        style="@style/Text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" />

    <TextView
        style="@style/Title4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/questions_title" />

    <TextView
        style="@style/Title4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/questions_subtitle"
        android:textColor="@color/grey3" />

</LinearLayout>